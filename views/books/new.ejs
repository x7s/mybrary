<!DOCTYPE html>
<html lang="bg">
<head>
  <%- include('../partials/header') %>
</head>
<body>
  <h1>New Book</h1>
  <form action="/books" method="POST">
    <div class="form-row">
      <label for="title">Title:</label>
      <input type="text" id="title" name="title" required>
    </div>
    <div class="form-row">
      <label for="author">Author:</label>
      <select id="author" name="author" required>
        <% authors.forEach(author => { %>
          <option value="<%= author.id %>"><%= author.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="form-row">
      <label for="publisher">Publisher:</label>
      <select id="publisher" name="publisher" required>
        <% publishers.forEach(publisher => { %>
          <option value="<%= publisher.id %>"><%= publisher.name %></option>
        <% }) %>
      </select>
    </div>
    <div class="form-row">
      <label for="publishDate">Publish Date:</label>
      <input type="date" id="publishDate" name="publishDate" required>
    </div>
    <div class="form-row">
      <label for="pageCount">Page Count:</label>
      <input type="number" id="pageCount" name="pageCount" required>
    </div>
    <div class="form-row">
      <label for="description">Description:</label>
      <textarea id="description" name="description"></textarea>
    </div>
    <div class="form-row form-row-end btn-row">
      <a class="btn btn-danger" href="/books">Cancel</a>
      <button class="btn btn-primary" type="submit">Create Book</button>
    </div>
  </form>
  <%- include('../partials/footer') %>
</body>
</html>