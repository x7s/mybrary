<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
</head>
<body>
  <h1><%= book.title %></h1>
  <p>Author: <%= book.author.name %></p>
  <p>Publisher: <%= book.publisher ? book.publisher.name : 'Unknown' %></p>
  <p>Published on: <%= book.publishDate.toDateString() %></p>
  <p>Page Count: <%= book.pageCount %></p>
  <p>Description: <%= book.description %></p>

  <!-- <div class="btn-row">
    <a class="btn btn-primary" href="">Edit</a>
    <a class="btn btn-danger" href="/books">Back</a>
  </div> -->
  <!-- Show edit and delete buttons only for admin -->
  <% if (req.session.admin) { %>
    <div>
      <a href="/books/<%= book.id %>/edit" class="btn btn-primary">Edit</a>
      <form action="/books/<%= books.id %>?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
  <% } %>

  <a href="/books">Back to Books</a>

  <%- include('../partials/footer') %>
</body>
</html>