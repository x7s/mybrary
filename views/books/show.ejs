<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
  <title><%= book.title %></title>
</head>
<body>
  <h1><%= book.title %></h1>
  <p>Author: <%= book.author.name %></p>
  <p>Publisher: <%= book.publisher.name %></p>
  <p>Published on: <%= book.publishDate.toDateString() %></p>
  <p>Page Count: <%= book.pageCount %></p>
  <p>Description: <%= book.description %></p>

  <!-- Show edit and delete buttons only for admin -->
  <% if (session.admin) { %>
    <div>
      <a href="/books/<%= book.id %>/edit" class="btn btn-primary">Edit</a>
      <form action="/books/<%= book.id %>?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
  <% } %>

  <a href="/books">Back to Books</a>
  <%- include('../partials/footer') %>
</body>
</html>