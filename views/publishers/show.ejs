<!DOCTYPE html>
<html lang="bg">
<head>
  <%- include('../partials/header') %>
  <title><%= publisher.name %></title>
</head>
<body>
  <h1><%= publisher.name %></h1>
  <p><%= publisher.bio %></p>

  <!-- Show edit and delete buttons only for admin -->
  <% if (session.admin) { %>
    <div>
      <a href="/admin/publishers/<%= publisher.id %>/edit" class="btn btn-primary">Edit</a>
      <form action="/admin/publishers/<%= publisher.id %>?_method=DELETE" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </div>
  <% } %>

  <a href="/publishers">Back to Publishers</a>
  <%- include('../partials/footer') %>
</body>
</html>