<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/header') %>
  <title>Add New Publisher</title>
</head>
<body>
  <h1>Add New Publisher</h1>
  <form action="/publishers" method="POST">
    <div class="form-row">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div class="form-row">
      <label for="bio">Bio:</label>
      <textarea id="bio" name="bio"></textarea>
    </div>
    <div class="form-row form-row-end btn-row">
      <button class="btn btn-primary" type="submit">Add Publisher</button>
    </div>
  </form>
  <a href="/publishers">Back to Publishers</a>
  <%- include('../partials/footer') %>
</body>
</html>