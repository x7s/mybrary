<!DOCTYPE html>
<html lang="bg">
<head>
  <%- include('../partials/header') %>
  <title>Потребители</title>
</head>
<body>
  <h1>Потребители</h1>
  <ul>
    <% publishers.forEach(publisher => { %>
      <li>
        <a href="/publishers/<%= publisher.id %>"><%= publisher.name %></a>
        <% if (session.admin) { %>
          <!-- Show edit and delete buttons only for admin -->
          <a href="/publishers" class="btn btn-danger">Всички Потребители</a>
          <a href="/admin/publishers/<%= publisher.id %>/edit" class="btn btn-primary">Редактиране</a>
          <form action="/admin/publishers/<%= publisher.id %>?_method=DELETE" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger">Изтриване</button>
          </form>
        <% } %>
      </li>
    <% }) %>
  </ul>
  <%- include('../partials/footer') %>
</body>
</html>